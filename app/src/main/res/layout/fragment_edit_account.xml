<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/ap_white"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/primary_bold"
        android:text="Edit Account"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/ap_brown"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextUserNameEditAc"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/back_edittext"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="12dp"
            android:drawableTint="@color/ap_pink"
            android:hint="User name"
            android:gravity="center_vertical"
            android:textColor="@color/ap_brown"
            android:layout_gravity="center"
            android:textColorHint="#48595959"
            android:maxLines="1"
            android:fontFamily="@font/primary_regular"
            android:textSize="18sp"
            android:maxLength="28"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <EditText
                android:id="@+id/editTextPasswordEditAc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_edittext"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Password"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:drawableTint="@color/ap_pink"
                android:gravity="center_vertical"
                android:textColor="@color/ap_brown"
                android:layout_gravity="center"
                android:textColorHint="#48595959"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:fontFamily="@font/primary_regular"
                android:maxLength="25"/>

            <ImageView
                android:id="@+id/btnShowPasswordEditAc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_show"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="38dp"
                app:tint="@color/ap_pink"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="64dp">

            <EditText
                android:id="@+id/editTextConfirmPasswordEditAc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_edittext"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:hint="Confirm Password"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:drawableTint="@color/ap_pink"
                android:gravity="center_vertical"
                android:textColor="@color/ap_brown"
                android:layout_gravity="center"
                android:textColorHint="#48595959"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:fontFamily="@font/primary_regular"
                android:maxLength="25"/>

            <ImageView
                android:id="@+id/btnShowConfirmPasswordEditAc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_show"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="38dp"
                app:tint="@color/ap_pink"/>
        </FrameLayout>


    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonUpdateEditAc"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/primary_bold"
        android:gravity="center"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/ap_brown"
        android:textSize="18sp"
        app:cornerRadius="25dp"
        app:rippleColor="#338A8A8A"
        app:strokeColor="@color/ap_brown"
        app:strokeWidth="2sp" />

</RelativeLayout>